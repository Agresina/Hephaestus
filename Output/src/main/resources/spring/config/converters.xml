<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<!-- 
			Add your own converters using entries of the following form: 
			<bean class="converters.Class1ToClass2" /> 
		-->
		<bean class="converters.AuthorityToStringConverter"/>
		<bean class="converters.StringToAuthorityConverter"/>
		
			<!-- Actor -->
		<bean class="converters.ActorToStringConverter"/>
		<bean class="converters.StringToActorConverter"/>
		
		<!-- Administrator -->
		<bean class="converters.AdministratorToStringConverter"/>
		<bean class="converters.StringToAdministratorConverter"/>
		
		<!-- Category -->
		<bean class="converters.CategoryToStringConverter"/>
		<bean class="converters.StringToCategoryConverter"/>
		
		<!-- Clerk -->
		<bean class="converters.ClerkToStringConverter"/>
		<bean class="converters.StringToClerkConverter"/>
		
		<!-- Comment -->
		<bean class="converters.CommentToStringConverter"/>
		<bean class="converters.StringToCommentConverter"/>
		
		<!-- Consumer -->
		<bean class="converters.ConsumerToStringConverter"/>
		<bean class="converters.StringToConsumerConverter"/>
		
		<!-- ExchangeRateTable -->
		<bean class="converters.ExchangeRateTableToStringConverter"/>
		<bean class="converters.StringToExchangeRateTableConverter"/>
		
		<!-- Identificator -->
		<bean class="converters.IdentificatorToStringConverter"/>
		<bean class="converters.StringToIdentificatorConverter"/>
		
		<!-- Item -->
		<bean class="converters.ItemToStringConverter"/>
		<bean class="converters.StringToItemConverter"/>
		
		<!-- Message Folder -->
		<bean class="converters.Message FolderToStringConverter"/>
		<bean class="converters.StringToMessage FolderConverter"/>
		
		<!-- Message -->
		<bean class="converters.MessageToStringConverter"/>
		<bean class="converters.StringToMessageConverter"/>
		
		<!-- OrderInvoice -->
		<bean class="converters.OrderInvoiceToStringConverter"/>
		<bean class="converters.StringToOrderInvoiceConverter"/>
		
		<!-- OrderLine -->
		<bean class="converters.OrderLineToStringConverter"/>
		<bean class="converters.StringToOrderLineConverter"/>
		
		<!-- Quantity -->
		<bean class="converters.QuantityToStringConverter"/>
		<bean class="converters.StringToQuantityConverter"/>
		
		<!-- ShoppingCart -->
		<bean class="converters.ShoppingCartToStringConverter"/>
		<bean class="converters.StringToShoppingCartConverter"/>
		
		<!-- Stock -->
		<bean class="converters.StockToStringConverter"/>
		<bean class="converters.StringToStockConverter"/>
		
		<!-- Subsystem0 -->
		<bean class="converters.Subsystem0ToStringConverter"/>
		<bean class="converters.StringToSubsystem0Converter"/>
		
		<!-- Supermarket -->
		<bean class="converters.SupermarketToStringConverter"/>
		<bean class="converters.StringToSupermarketConverter"/>
		
		<!-- Tax -->
		<bean class="converters.TaxToStringConverter"/>
		<bean class="converters.StringToTaxConverter"/>
		
		<!-- UserAccount -->
		<bean class="converters.UserAccountToStringConverter"/>
		<bean class="converters.StringToUserAccountConverter"/>
		
		<!-- Warehouse -->
		<bean class="converters.WarehouseToStringConverter"/>
		<bean class="converters.StringToWarehouseConverter"/>
		
	</util:list>
	
</beans>